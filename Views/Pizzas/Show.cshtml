@model PizzaWithCategory

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">price</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>

            <tr>
                <th>@Model.Pizza.Name</th>
                <td>@Model.Pizza.Description</td>
                <td> <img src="@Model.Pizza.Image" alt="Immagine della pizza"> </td>
                <td>@Model.Pizza.Price&euro;</td>
                <td>@Model.Category.Name</td>
            </tr>

    </tbody>
</table>
